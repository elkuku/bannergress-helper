{% extends 'base.html.twig' %}

{% block title %}Hello MaxfieldController!{% endblock %}

{% block body %}
<div class="row">
    <div class="col-8">
        <h1>Maxfields</h1>
        <div class="row">

        {% for maxfield in maxfields %}
            <div class="col-8">{{ maxfield.name }}</div>
            <div class="col-4">
                <a href="{{ path('maxfield_show', {'id': maxfield.id})}}">Show</a>
            </div>
{#        {{dump(maxfield)}}#}
        {% else %}
        You don't have any maxfields yet :(
        {% endfor %}
        </div>
    </div>
    <div class="col-4">
        {{ form_start(form) }}
        {{ form_errors(form) }}

        {{ form_row(form.zipfile) }}

        <button>Send</button>
        {{ form_end(form) }}

    </div>
</div>

{% endblock %}
